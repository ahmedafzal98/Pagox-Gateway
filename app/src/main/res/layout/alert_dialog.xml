<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="6dp"
        android:background="#000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Process"
                android:textSize="22sp"
                android:textColor="#000"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Credit Card/ACH"
                android:id="@+id/btn_credit"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:elevation="6dp"
                android:background="@drawable/aler_button"
                android:foreground="?actionBarItemBackground"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_profile"
                android:text="Card Profile"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:elevation="6dp"
                android:background="@drawable/aler_button"
                android:foreground="?actionBarItemBackground"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="pay Link"
                android:id="@+id/btn_pay_link"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:elevation="6dp"
                android:background="@drawable/aler_button"
                android:foreground="?actionBarItemBackground"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="VOID , CAPTURE &amp; REFUND"
                android:id="@+id/btn_voiCapture"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:elevation="6dp"
                android:background="@drawable/aler_button"
                android:foreground="?actionBarItemBackground"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>