<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Customer Detail"
                android:gravity="center"
                android:textColor="	#404040"
                android:background="#829199"
                android:textSize="30sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:background="#eef2f4"
                android:paddingRight="30dp">
                <TextView
                    android:id="@+id/txt_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:textColor="	#404040"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edit_firstt_name"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_first_name"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txt_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_firstt_name"
                    android:text="Last Name"
                    android:layout_marginLeft="2dp"
                    android:textColor="	#404040"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edit_last_name"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_last_name"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txt_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_last_name"
                    android:text="company Name"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:textColor="	#404040"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edit_company_name"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_company_name"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txt_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_company_name"
                    android:text="Address 1"
                    android:textColor="	#404040"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edit_address1"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_address1"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txt_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_address1"
                    android:text="Address 2"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:textColor="	#404040"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edit_address2"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_address2"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txt_phoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_address2"
                    android:text="Phone No"
                    android:layout_marginLeft="2dp"
                    android:textColor="	#404040"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edit_phoneNo"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_phoneNo"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txt_invoiceNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_phoneNo"
                    android:text="Invoice No"
                    android:layout_marginLeft="2dp"
                    android:textColor="	#404040"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edit_invoiceNo"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_invoiceNo"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txt_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_invoiceNo"
                    android:textColor="	#404040"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:text="State"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_state"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_state"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_invoiceNo"
                    android:layout_marginLeft="100dp"
                    android:textColor="	#404040"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/txt_invoiceNo"
                    android:text="City"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_city"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_city"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/edit_state"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_state"
                    android:text="Email"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#404040"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_email"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/btn_trans"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/edit_email"
                    android:elevation="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"
                    android:text="DONE"
                    android:textColor="#fff"
                    android:layout_marginLeft="3dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="60dp"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>