<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".summary">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_heading"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#eef2f4"
                android:gravity="center"
                android:text="Payment Confirmation"
                android:textColor="#404040"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_credit"
                    android:text="Card Number :"
                    android:layout_below="@id/txt_heading"
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_credit"
                    android:text="5454545454545454"
                    android:layout_below="@id/txt_heading"
                    android:layout_toRightOf="@id/txt_credit"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:layout_marginLeft="20dp"
                    android:enabled="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_holder_name"
                    android:layout_below="@id/txt_credit"
                    android:text="Card Holder Name :"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_holder_name"
                    android:layout_toRightOf="@id/txt_holder_name"
                    android:layout_below="@id/edit_credit"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-2dp"
                    android:enabled="false"
                    android:text="ahmed"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_expiry_date"
                    android:layout_below="@id/txt_holder_name"
                    android:text="Expiry Year :"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_expi_date"
                    android:layout_toRightOf="@id/txt_holder_name"
                    android:layout_below="@id/edit_holder_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-2dp"
                    android:enabled="false"
                    android:text="02/2022"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_expiry_month"
                    android:layout_below="@id/txt_holder_name"
                    android:text="Expiry Month :"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_expi_month"
                    android:layout_toRightOf="@id/txt_holder_name"
                    android:layout_below="@id/edit_holder_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-2dp"
                    android:enabled="false"
                    android:text="02"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_cvv"
                    android:layout_below="@id/txt_expiry_date"
                    android:text="CVV :"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_cvv"
                    android:layout_toRightOf="@id/txt_holder_name"
                    android:layout_below="@id/edit_expi_date"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-2dp"
                    android:enabled="false"
                    android:text="123"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_amount"
                    android:layout_below="@id/txt_cvv"
                    android:text="Amount :"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_amount"
                    android:layout_toRightOf="@id/txt_holder_name"
                    android:layout_below="@id/edit_cvv"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-2dp"
                    android:enabled="false"
                    android:text="5456"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prog_bard"
                    android:layout_gravity="center_horizontal"
                    android:indeterminateDrawable="@drawable/progress"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    />
                <Button
                    android:id="@+id/btn_transaction"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"
                    android:elevation="10dp"
                    android:text="PROCESS TRANSACTION"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

</ScrollView>