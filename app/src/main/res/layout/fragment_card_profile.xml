<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardProfileFragment"
    android:background="#F0F0F0"
    android:padding="10dp">



    <EditText
        android:id="@+id/search_view"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/search_view"
        android:ems="10"
        android:textSize="13sp"
        android:hint="Card Name / Last 4 digit"
        android:inputType="textPersonName"
        android:textColor="#000" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_refresh_profile"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginRight="30dp"
        android:foreground="?actionBarItemBackground"
        android:background="@drawable/ic_refresh_black_24dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_total_records"
        android:text="Total Records : 0"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/search_view"/>
    <ListView
        android:id="@+id/lisview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_total_records"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:dividerHeight="-10dp"
        android:divider="@null"
        android:layout_marginBottom="40dp" />

</RelativeLayout>