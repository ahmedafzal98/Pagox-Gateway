<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp">

            <TextView
                android:id="@+id/prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="profileId  :"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/profile_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:textSize="13sp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/prof"
                android:text="ProfileID " />

            <TextView
                android:id="@+id/CHN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prof"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:text="Card Holder Name  :"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_holder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_id"
                android:layout_marginLeft="8dp"
                android:textSize="13sp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/CHN"
                android:text="Card Holder Name " />

            <TextView
                android:id="@+id/CN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CHN"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:text="Card Number :"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_holder_name"
                android:layout_marginLeft="47dp"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/CN"
                android:text="Card Number" />

            <TextView
                android:id="@+id/tender_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_num"
                android:layout_marginLeft="54dp"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/tt"
                android:text="Tender Type" />

            <TextView
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CN"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"

                android:text="Tender Type :"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/payment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tender_type"
                android:layout_marginLeft="42dp"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/pt"
                android:text="payment Type " />

            <TextView
                android:id="@+id/pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tt"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:text="payment Type :"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pt"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:text="Date :"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment_type"
                android:layout_marginLeft="108dp"
                android:layout_marginTop="6dp"
                android:textSize="13sp"
                android:layout_toRightOf="@id/dat"
                android:text="Date " />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>